@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="d-flex justify-content-center mt-3">@ViewData["Title"]</h1>

<div class="row">
    <div class="d-flex justify-content-center mt-3">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2 mt-2">
                <input asp-for="Input.Email" class="form-control" style="height: 80px" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="fs-4"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2 mt-2">
                <input asp-for="Input.Password" class="form-control" style="height: 80px" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password" class="fs-4"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2 mt-2">
                <input asp-for="Input.ConfirmPassword" class="form-control" style="height: 80px" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="fs-4"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
